# ============================================================
# Frontend Environment Variables
# ============================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ============================================================
# API Configuration
# ============================================================

# Backend API Base URL
# Development (local):
VITE_API_URL=http://localhost:5000

# Production:
# VITE_API_URL=https://api.yourdomain.com

# Socket.io URL (usually same as API URL)
VITE_SOCKET_URL=http://localhost:5000

# ============================================================
# App Configuration
# ============================================================

# Application name (appears in page titles)
VITE_APP_NAME=Pulse

# Environment (development, staging, production)
VITE_ENV=development

# Maximum file size for uploads in bytes (100MB = 104857600)
VITE_MAX_FILE_SIZE=104857600

# ============================================================
# Feature Flags
# ============================================================

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable debug mode (shows additional logging in console)
VITE_ENABLE_DEBUG=true

# Enable Socket.io connection debug logs
# VITE_SOCKET_DEBUG=false

# ============================================================
# Optional: Analytics & Monitoring
# ============================================================

# Google Analytics Measurement ID
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================
# Optional: External Services
# ============================================================

# CDN URL for static assets (if using CDN)
# VITE_CDN_URL=https://cdn.yourdomain.com

# ============================================================
# Build Configuration
# ============================================================

# Build mode (development, production)
# Set automatically by Vite, but can override
# MODE=production
